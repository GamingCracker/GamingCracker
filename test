-- Define o nome do ScreenGui
local guiName = "FuriusHub"

-- Verifica se um ScreenGui com o nome especificado já existe e o remove
local oldGui = game.CoreGui:FindFirstChild(guiName)
if oldGui then
    oldGui:Destroy()
end

-- Cria o novo ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = guiName
ScreenGui.Parent = game.CoreGui

-- Cria o Frame
local Frame = Instance.new("Frame")
Frame.Parent = ScreenGui
Frame.Size = UDim2.new(0, 500, 0, 350)
Frame.BackgroundColor3 = Color3.fromRGB(0, 100, 0)
Frame.BorderSizePixel = 0
Frame.Position = UDim2.new(0.5, -250, 0.5, -175)

-- Cria o UICorner para o Frame
local FrameCorner = Instance.new("UICorner")
FrameCorner.Parent = Frame
FrameCorner.CornerRadius = UDim.new(0, 25)

-- Cria o ImageButton
local ImageButton = Instance.new("ImageButton")
ImageButton.Parent = ScreenGui
ImageButton.Size = UDim2.new(0, 50, 0, 50)
ImageButton.BorderSizePixel = 0
ImageButton.Position = UDim2.new(0.5, -25, 0.5, -25)

-- Verifica se o usuário é móvel e ajusta a visibilidade e a capacidade de arrastar do ImageButton
if UserInputService.TouchEnabled then
    ImageButton.Visible = true
    ImageButton.Draggable = true
else
    ImageButton.Visible = false
    ImageButton.Draggable = false
end

-- Conecta o evento TouchTap para mover o Frame quando o ImageButton é tocado
ImageButton.TouchTap:Connect(function()
    Frame.Position = Frame.Position + UDim2.new(0, 10, 0, 10)
end)

-- Cria o ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = game.CoreGui

-- Cria o ScrollingFrame
local ScrollingFrame = Instance.new("ScrollingFrame")
ScrollingFrame.Parent = ScreenGui
ScrollingFrame.Size = UDim2.new(0, 150, 0, 300)
ScrollingFrame.Position = UDim2.new(0, 50, 0.5, -150)
ScrollingFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
ScrollingFrame.ScrollBarThickness = 6
ScrollingFrame.ScrollBarImageColor3 = Color3.fromRGB(0, 100, 0)

-- Cria o TextLabel
local TextLabel = Instance.new("TextLabel")
TextLabel.Parent = ScrollingFrame
TextLabel.Size = UDim2.new(1, 0, 0, 50)
TextLabel.Position = UDim2.new(0, 0, 0, -50)
TextLabel.Text = "Furius Hub"
TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TextLabel.BackgroundTransparency = 1

-- Cria a função CreateButton para criar facilmente novos botões
local function CreateButton(label)
    local TextButton = Instance.new("TextButton")
    TextButton.Parent = ScrollingFrame
    TextButton.Size = UDim2.new(1, -10, 0, 50)
    TextButton.Position = UDim2.new(0, 5, 0, ScrollingFrame.CanvasSize.Y.Offset + 5)
    TextButton.Text = label
    TextButton.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
    TextButton.BorderSizePixel = 0

    -- Cria o UICorner para o TextButton
    local ButtonCorner = Instance.new("UICorner")
    ButtonCorner.Parent = TextButton
    ButtonCorner.CornerRadius = UDim.new(0.5, 0)

    -- Atualiza o tamanho do canvas do ScrollingFrame
    ScrollingFrame.CanvasSize = ScrollingFrame.CanvasSize + UDim2.new(0, 0, 0, 55)
end

-- Cria os botões na ordem especificada
CreateButton("main")
CreateButton("misc")
CreateButton("status")
CreateButton("auto farm")
CreateButton("teleport")
CreateButton("devil fruit")
CreateButton("settings")

