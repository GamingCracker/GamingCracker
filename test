local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({Name = "Furius Hub", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

-- Criando uma Aba
local Tab = Window:MakeTab({
    Name = "Auto Farm",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Criando uma Seção
local Section = Tab:AddSection({
    Name = "Selecte Auto Farm"
})

-- Notificando o usuário
OrionLib:MakeNotification({
    Name = "Seja Bem Vindo!",
    Content = "Este script tem algumas funcoes basicas nvai te ajudar um pouco eu espero!",
    Image = "rbxassetid://4483345998",
    Time = 5
})

Claro! Você pode adicionar uma função ao botão para executar o script de auto farm quando ele for clicado. Aqui está um exemplo de como você pode fazer isso:

-- Criando um Botão
Tab:AddButton({
    Name = "Auto Farm",
    Callback = function()
        -- Seu código de auto farm aqui
        local plr = game.Players.LocalPlayer
        local lastPos = plr.Character.PrimaryPart.CFrame
        local autoFarmEnabled = true

        local function autoFarm()
            plr.Character:SetPrimaryPartCFrame(game.ReplicatedStorage.ViewportNPCs.Eren.PrimaryPart.CFrame * CFrame.new(0, 10, 0))

            while autoFarmEnabled do
                pcall(function()
                    for i, v in pairs(workspace.ReplicatedChunks:GetDescendants()) do
                        if v.Name == "Clown Pirate" then
                            local enemy = v
                            lastPos = enemy.PrimaryPart.CFrame
                            repeat task.wait()
                                local char = plr.Character

                                char:SetPrimaryPartCFrame(enemy.PrimaryPart.CFrame * CFrame.new(0, -10, 0))
                                local args = {
                                    [1] = game:GetService("Players").LocalPlayer.Character.Punch,
                                    [2] = enemy
                                }

                                game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("Melee"):FireServer(unpack(args))

                            until enemy.Humanoid.Health <= 0 or not enemy or not autoFarmEnabled
                        end
                    end
                    plr.Character:SetPrimaryPartCFrame(lastPos * CFrame.new(0, 10, 0))
                end)
            end
        end

        -- Executando a função de auto farm
        autoFarm()
    end
})

-- Criando uma variável para armazenar o estado do botão de alternância
local bringMobEnabled = false

-- Criando um Alternador de Caixa de Seleção
Tab:AddToggle({
    Name = "Bring Mob",
    Default = false,
    Callback = function(Value)
        bringMobEnabled = Value
        if bringMobEnabled then
            -- Seu código para trazer NPCs aqui
            local plr = game.Players.LocalPlayer
            local char = plr.Character
            local rootPart = char:FindFirstChild("HumanoidRootPart")
            local npcName = "Clown Pirate"
            local range = 100

            while bringMobEnabled do
                for i, v in pairs(workspace:GetDescendants()) do
                    if v.Name == npcName and (v.PrimaryPart.Position - rootPart.Position).magnitude <= range then
                        v:SetPrimaryPartCFrame(rootPart.CFrame * CFrame.new(0, 10, 0))
                    end
                end
                wait()
            end
        end
    end
})

-- Criando uma Aba
local Tab = Window:MakeTab({
    Name = "Teleport",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})


-- Criando uma Aba
local Tab = Window:MakeTab({
    Name = "Player",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local selectedPlayer = nil

-- Criando uma Lista
local playerList = Tab:AddList({
    Name = "Jogadores",
    Callback = function(Value)
        selectedPlayer = Value
    end
})

-- Preenchendo a lista com os jogadores do jogo
for i, v in pairs(game.Players:GetPlayers()) do
    playerList:Add(v.Name)
end

-- Criando um Botão de Atualização
Tab:AddButton({
    Name = "Refresh",
    Callback = function()
        -- Limpando a lista
        playerList:Clear()

        -- Preenchendo a lista com os jogadores do jogo
        for i, v in pairs(game.Players:GetPlayers()) do
            playerList:Add(v.Name)
        end
    end
})

-- Criando um Botão TP
Tab:AddButton({
    Name = "TP",
    Callback = function()
        if selectedPlayer then
            local plr = game.Players.LocalPlayer
            local char = plr.Character
            local rootPart = char:FindFirstChild("HumanoidRootPart")
            local targetPlr = game.Players:FindFirstChild(selectedPlayer)
            if targetPlr then
                local targetChar = targetPlr.Character
                local targetRootPart = targetChar:FindFirstChild("HumanoidRootPart")
                if targetRootPart then
                    rootPart.CFrame = targetRootPart.CFrame * CFrame.new(0, 5, 0)
                end
            end
        end
    end
})

-- Criando um Alternador de Caixa de Seleção
Tab:AddToggle({
    Name = "Este é um alternador!",
    Default = false,
    Callback = function(Value)
        print(Value)
    end
})

-- Alterando o valor de um Alternador existente
CoolToggle:Set(true)
