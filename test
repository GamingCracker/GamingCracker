local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({Name = "Furious Hub", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

local Tab = Window:MakeTab({
	Name = "Auto Farm",
	Icon = "rbxassetid://",
	PremiumOnly = false
})

local Section = Tab:AddSection({
	Name = "Auto Farm"
})
 
 OrionLib:MakeNotification({
	Name = "Title!",
	Content = "Seja bem vindo!",
	Image = "rbxassetid://",
	Time = 5
})

Tab:AddButton({
	Name = "Refresh",
	Callback = function()
		local plr = game.Players.LocalPlayer
		local inventory = plr.Backpack:GetChildren()
		local equipped = plr.Character:GetChildren()
		local itemsList = {}
		
		for i, item in pairs(inventory) do
			table.insert(itemsList, item.Name)
		end
		
		for i, item in pairs(equipped) do
			if item:IsA("Tool") then
				table.insert(itemsList, item.Name)
			end
		end
		
		local itemsText = table.concat(itemsList, ", ")
		print("Inventory and equipped items: " .. itemsText)
	end    
})

local plr = game.Players.LocalPlayer
local autoFarmEnabled = false
local npcs = {
	{ name = "Bandit", level = 5 },
	{ name = "Higuma", level = 15 },
	{ name = "Soldier", level = 25 },
	{ name = "Captain Axe", level = 45 },
	{ name = "Clown Pirate", level = 75 },
	{ name = "Boggy", level = math.huge }
}

local function getTargetNPC()
	local playerLevel = plr.leaderstats.Level.Value
	for i, npc in ipairs(npcs) do
		if playerLevel < npc.level then
			return npc.name
		end
	end
end

Tab:AddButton({
	Name = "Auto Farm",
	Callback = function()
		autoFarmEnabled = not autoFarmEnabled
		if autoFarmEnabled then
			while autoFarmEnabled do
				local targetNPCName = getTargetNPC()
				
				-- Check if player has quest for target NPC
				if not hasQuest(targetNPCName) then
					-- Go to quest NPC and accept quest
					local questNPC = game.Workspace:FindFirstChild("QuestNPC")
					if questNPC then
						plr.Character:MoveTo(questNPC.PrimaryPart.Position)
						wait(1)
						
						-- Accept quest using QuestPrompt object
						local questPrompt = game.Players.LocalPlayer.PlayerGui:FindFirstChild("QuestPrompt")
						if questPrompt then
							local questList = questPrompt:FindFirstChild("QuestList")
							local confirmButton = questPrompt:FindFirstChild("Confirm")
							if questList and confirmButton then
								-- Select quest from questList here
								confirmButton:Fire()
							end
						end
					end
				end
				
				-- Attack target NPC until quest is completed
				repeat
					local targetNPC = game.Workspace:FindFirstChild(targetNPCName)
					if targetNPC then
						plr.Character:MoveTo(targetNPC.PrimaryPart.Position)
						wait(1)
						-- Attack NPC using Punch system here
					end
					wait(1)
				until questIsCompleted(targetNPCName) or not autoFarmEnabled
				
				-- Check if player has reached next level and new quest is unlocked
				if newQuestUnlocked() then
					break
				end
			end
		end
	end    
})

Tab:AddToggle({
	Name = "List",
	Default = false,
	Callback = function(Value)
		print(Value)
	end    
})

Tab:AddSlider({
	Name = "Slider",
	Min = 0,
	Max = 20,
	Default = 5,
	Color = Color3.fromRGB(255,255,255),
	Increment = 1,
	ValueName = "bananas",
	Callback = function(Value)
		print(Value)
	end    
})

 
